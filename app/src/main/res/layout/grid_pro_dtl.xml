<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/mer_Register_tv_ml"
        android:layout_marginTop="@dimen/mer_view_tv_mt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/android_gridview_image"
        android:layout_marginStart="30dp"
        android:gravity="start"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorPrimaryDark" />
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.9dp"
        android:layout_below="@+id/android_gridview_image"
        android:layout_marginTop="5dp"
        android:background="#eee" />

</RelativeLayout>