<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.virtualskillset.discountmania.AboutActivity">

    <TextView
        android:text="Discount Mania"
        android:textSize="@dimen/abt_tv_fca_sz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Virtual Skillset Solution \n\n4th Floor, Krishna Colmpex,\n\nManji ka Hattha, Jodhpur,\n\n342001"
        android:textSize="@dimen/abt_tv_dev_sz" />

    <ImageView
        android:layout_width="@dimen/abt_iv_sz"
        android:layout_height="@dimen/abt_iv_sz"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Version 4.2.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"
        android:textSize="@dimen/abt_tv_vs_sz"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="We are waiting for your feedback\n\nemail us : info.discountmania@gmail.com\n\nwww.discountmania.org"
        android:layout_width="wrap_content"
        android:textSize="@dimen/abt_tv_dev_sz"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:autoLink="web"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/abt_tv_fdbk_mt"
        android:layout_below="@+id/textView3"
        />



</RelativeLayout>
