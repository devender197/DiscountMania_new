<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".user.AUserProfile">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/grad">

                    <com.virtualskillset.discountmania.helper.adapter.CircularImageView
                        android:id="@+id/prfimg"

                        android:layout_width="150dp"

                        android:layout_height="150dp"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="105dp"
                        android:layout_marginTop="39dp"
                        app:civ_border="true"
                        app:civ_border_color="@color/browser_actions_title_color"
                        app:civ_border_width="2dp"
                        android:src="@drawable/ic_admin" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prfimg"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Enter your name"
                        android:inputType="textCapWords"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="13dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/next_icon" />
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="13dp"
                        android:layout_below="@+id/editText"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ad_loc" />


                </RelativeLayout>


            </RelativeLayout>

            <EditText
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="283dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="Enter DOB"
                android:padding="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="230dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:hint="Father's name"
                android:inputType="textCapWords"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/editText4"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Profession"
                android:inputType="textCapWords"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-230dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText7"
                android:ems="10"
                android:hint="PAN Card"
                android:textAllCaps="true"
                android:backgroundTint="@color/text"
                android:inputType="textPersonName"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/editText9"
                android:ems="10"
                android:inputType="number"
                android:layout_marginEnd="15dp"
                android:hint="Aadhar Card"
                android:textColorHint="@color/text"
                />

            <EditText
                android:id="@+id/editText13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText9"
                android:focusable="false"
                android:ems="10" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText5"
                android:layout_below="@+id/editText9"
                android:maxLength="6"
                android:hint="Pin Code"
                android:inputType="number"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/editText15"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText13"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Address"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:maxLines="5"
                android:lines="5"
                android:inputType="textMultiLine"
                android:textColorHint="@color/text"
                android:scrollbars="vertical"/>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
