<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/android_gridview_text"
        android:layout_alignBaseline="@+id/android_gridview_text"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/colorstart"
        android:gravity="end"
        android:layout_marginEnd="30dp"
        android:text="5"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/android_gridview_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.9dp"
        android:layout_below="@+id/android_gridview_text"
        android:layout_marginTop="20dp"
        android:background="#eee" />


</RelativeLayout>
