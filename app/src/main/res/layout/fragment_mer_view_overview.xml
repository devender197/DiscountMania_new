<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".merchant.MerViewOverViewFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:id="@+id/main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                            android:layout_marginTop="@dimen/mer_view_detail_tv_top"
                            android:fontFamily="@font/capriola2"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:id="@+id/mainl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/peri"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/per" />



                            <TextView
                                android:id="@+id/pert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/of"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/ofi"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/offer" />

                            <TextView
                                android:id="@+id/oft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="40dp"
                        app:srcCompat="@drawable/dr" />

                    <ImageView
                        android:id="@+id/shr"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/imageView2"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/prfl" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearmain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/android_gridview_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/time" />

                            <TextView
                                android:id="@+id/time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/green"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/time4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/l2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/i2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/call" />

                            <TextView
                                android:id="@+id/t2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent"
                                android:layout_marginEnd="10dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/payi"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/ic_merchant" />

                            <TextView
                                android:id="@+id/cat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/green"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/payt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/i3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/detail" />

                            <TextView
                                android:id="@+id/t3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent"
                                />



                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/adi"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/ad" />

                            <TextView
                                android:id="@+id/adt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent"
                                />



                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/emi"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/email" />

                            <TextView
                                android:id="@+id/emt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:autoLink="email"
                                android:layout_marginStart="@dimen/mer_view_detail_tv_m"
                                android:fontFamily="@font/abeezee2"
                                android:textColor="@color/colorAccent"
                                />



                        </LinearLayout>


                    </LinearLayout>





                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mer_Register_tv_ml"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mer_Register_tv_ml"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/capriola2"
                        android:shadowColor="@color/colorstart"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="Social Connect"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_toEndOf="@+id/social"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="1dp"
                        android:verticalSpacing="1dp" />

                   <!-- <Button
                        android:id="@+id/whts"
                        android:layout_width="@dimen/socialpic"
                        android:layout_height="@dimen/socialpic"
                        android:layout_marginEnd="@dimen/socialpadding"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/whts" />

                    <Button
                        android:id="@+id/twi"
                        android:layout_width="@dimen/socialpic"
                        android:layout_height="@dimen/socialpic"
                        android:layout_marginEnd="@dimen/socialpadding"
                        android:layout_marginStart="@dimen/socialpadding"

                        android:background="@drawable/twi" />

                    <Button
                        android:id="@+id/you"
                        android:layout_width="@dimen/socialpic"
                        android:layout_height="@dimen/socialpic"
                        android:layout_marginEnd="@dimen/socialpadding"
                        android:layout_marginStart="@dimen/socialpadding"

                        android:background="@drawable/you" />

                    <Button
                        android:id="@+id/inst"
                        android:layout_width="@dimen/socialpic"
                        android:layout_height="@dimen/socialpic"
                        android:layout_marginEnd="@dimen/socialpadding"
                        android:layout_marginStart="@dimen/socialpadding"
                        android:background="@drawable/inst" />


                    <Button
                        android:id="@+id/fac"
                        android:layout_width="@dimen/socialpic"
                        android:layout_height="@dimen/socialpic"
                        android:layout_marginEnd="@dimen/socialpadding"
                        android:layout_marginStart="@dimen/socialpadding"
                        android:background="@drawable/face" />-->

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>