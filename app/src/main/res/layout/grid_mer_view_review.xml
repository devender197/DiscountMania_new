<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/mer_view_review_tv_m"
        android:layout_marginEnd="@dimen/mer_view_review_tv_m"
        android:layout_marginTop="@dimen/mer_view_review_tv_m"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />



    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/android_gridview_image"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/android_gridview_image"
        android:fontFamily="@font/abeezee2"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/android_gridview_image"
        android:layout_below="@+id/android_gridview_image"
        android:text="tv "
        android:textColor="@color/colorAccent"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/android_gridview_text"
        android:layout_toEndOf="@+id/ratingBar3"
        android:text="5.0"
        android:textColor="@color/colorAccent"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/abeezee2"
        android:text="26 Nov 18"
        android:layout_marginEnd="@dimen/mer_view_tv_mt"
        android:textColor="@color/colorAccent"
        android:textSize="10sp" />

    <RatingBar
        android:id="@+id/ratingBar3"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/android_gridview_text"
        android:layout_below="@+id/android_gridview_text"
        android:stepSize="1.0" />
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.9dp"
        android:layout_below="@id/rv"
        android:layout_marginTop="5dp"
        android:background="#eee" />
</RelativeLayout>