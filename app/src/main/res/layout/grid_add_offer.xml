<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    >

    <ImageView

        android:id="@+id/shp_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/abeezee"
        android:text="TextView"
        android:textColor="@color/colorAccent" />



    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"
        android:layout_below="@+id/head"
        android:layout_weight="1"
        android:fontFamily="@font/abeezee"
        android:text="TextView"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"
        android:layout_below="@+id/detail"
        android:text="text"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"

        android:layout_below="@+id/km"
        android:text="text"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"

        android:layout_below="@+id/dis"
        android:text="text"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_below="@+id/head"
        android:background="@drawable/dlt"
        android:layout_marginEnd="20dp"
        />


    <View
        android:layout_width="1.6dp"
        android:layout_height="27dp"
android:layout_below="@+id/head"
        android:layout_toStartOf="@+id/cal"
        android:background="#eee" />

   <!-- <ImageView
        android:id="@+id/mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/head"
        android:layout_marginEnd="40dp"
        android:background="@drawable/mod" />-->


</RelativeLayout>