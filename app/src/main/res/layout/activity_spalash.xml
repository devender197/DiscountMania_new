<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SpalashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/dm2" />
    <com.virtualskillset.discountmania.TypeWriter
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="#4729FF"
        android:text="A Tradition of Service"
        android:layout_above="@id/imgLogo"/>

    <com.virtualskillset.discountmania.TypeWriter
        android:id="@+id/title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/colorBlack"
        android:text="A Signature of Excellence"
        android:layout_below="@id/imgLogo"/>


    <com.virtualskillset.discountmania.TypeWriter
        android:id="@+id/typo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:textColor="#454545"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
